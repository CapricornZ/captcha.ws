<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Hibernate-mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="demo.chapta.model.Operation" table="Operations"> 
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <discriminator column="type" />
        <property name="content" column="jsonContent"/>
        <property name="startTime" type="java.sql.Timestamp" column="startTime"/>
        <property name="expireTime" type="java.sql.Timestamp" column="expireTime"/>
        <property name="updateTime" type="java.sql.Timestamp" column="updateTime"/>
        
        <set name="clients" table="client_operation" cascade="all" lazy="false">
        	<key column="operation_id"/>
        	<many-to-many class="demo.chapta.model.Client" column="client_id"/>
        </set>
        
        <subclass name="demo.chapta.model.BidOperation" discriminator-value="BID">  
            <property name="price"/>  
        </subclass>
        
        <subclass name="demo.chapta.model.LoginOperation" discriminator-value="LOGIN">
        </subclass> 
    </class>
</hibernate-mapping>